= provide :title, 'Admin Users'
.actions
  = link_to 'New Admin', new_admin_user_path

%table.index_table

  %thead
    %tr
      %th Name
      %th Email
      %td{colspan: 2}

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to 'Edit', [:edit, :admin, user]
        %td= link_to 'Delete', [:admin, user], method: :delete, data: { confirm: 'This cannot be undone. Are you sure you want to delete this user?'}
